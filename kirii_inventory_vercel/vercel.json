{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  },
  "crons": [
    { "path": "/cron/inventory-sync", "schedule": "45 0 * * *" },
    { "path": "/cron/inventory-sync", "schedule": "15 10 * * *" }
  ],
  "functions": {
    "app.py": {
      "maxDuration": 30
    }
  }
} 